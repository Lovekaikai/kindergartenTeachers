/* pages/index/index.wxss */
page{
  padding-bottom: 10px;
  overflow-x: hidden;
}
image{
  display: block;
  width: 100%;
}
.title{
  color: #3d464d;
  font-size: 28rpx;
  text-align:center;
  height:50rpx;
  line-height:50rpx;
  vertical-align:middle;
  padding-left: 24rpx;
}
.story{
  margin-top:20rpx;
  width:100%;
  border-bottom:6rpx solid #f2f2f2;
  height:40rpx;
  line-height:40rpx;
  vertical-align:middle;
  color:#f35b8f;
  font-weight:bold;
  padding-left: 24rpx;
  font-size: 28rpx;
}
.list-item{
  margin: 5px 20px;
  height:75px;
  border-bottom: 1px solid grey;
  position: relative;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap
}
.story-title{
  font-size: 34rpx;
  padding-top: 10px;
}
.story-content{
  width: 70%;
  font-size: 28rpx;
  color:grey;
}
.img-one{
  position: absolute;
  top:10px;
  right: 0;
}
.img-one image{
  display: block;
  width: 60px;
  height: 60px;
}
.images-top{
  position: absolute;
  top:0;
  right:0;
}
